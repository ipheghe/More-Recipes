{
  "name": "More-Recipes",
  "version": "1.0.0",
  "description": "More-Recipes provides a platform for users to share the awesome and exciting  recipe ideas they have invented or learnt.  Suppose a user comes up with a recipe,  he/she can post it on More-Recipes and  get feedback in form of reviews and votes from other users who explore that recipe. Users can also keep a list of their favorite recipes on the application.",
  "main": ".eslintrc.js",
  "scripts": {
    "wp": "webpack-dev-server --hot --history-api-fallback --open",
    "test:db": "cross-env NODE_ENV=test nyc mocha tests/test.js ",
    "test": "set NODE_ENV=test&&sequelize db:migrate:undo:all&&sequelize db:migrate  && cross-env NODE_ENV=test nyc mocha tests/test.js",
    "s:test": "set NODE_ENV=test&& mocha --compilers js:babel-core/register --timeout 10000 tests/test.js",
    "heroku-postbuild": "sequelize db:migrate",
    "migrate": "sequelize db:migrate:undo:all&&sequelize db:migrate",
    "start": "babel-node ./bin/www ",
    "start:dev": "nodemon --exec babel-node ./bin/www.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "shc": "start coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipheghe/More-Recipes.git"
  },
  "keywords": [],
  "author": "Ovie Ipheghe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ipheghe/More-Recipes/issues"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-core": "^6.25.0",
    "babel-istanbul": "^0.12.2",
    "babel-loader": "^7.1.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.24.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "jsonwebtoken": "^7.4.1",
    "morgan": "^1.7.0",
    "nodemon": "^1.12.0",
    "pg": "^6.1.5",
    "pg-hstore": "^2.3.2",
    "prop-types": "^15.5.10",
    "sequelize": "^4.8.0",
    "sequelize-cli": "^2.7.0",
    "validate.js": "^0.11.1"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "chai-http": "^3.0.0",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.10.2",
    "eslint-plugin-jsx-a11y": "^1.5.5",
    "eslint-plugin-react": "^5.2.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.0",
    "mocha-lcov-reporter": "^1.3.0",
    "node-sass": "^4.5.3",
    "nyc": "^11.1.0",
    "supertest": "^3.0.0"
  }
}
