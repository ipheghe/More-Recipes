{
  "name": "More-Recipes",
  "version": "1.0.0",
  "description": "More-Recipes provides a platform for users to share the awesome and exciting  recipe ideas they have invented or learnt.  Suppose a user comes up with a recipe,  he/she can post it on More-Recipes and  get feedback in form of reviews and votes from other users who explore that recipe. Users can also keep a list of their favorite recipes on the application.",
  "main": ".eslintrc.js",
  "scripts": {
    "babel-version": "babel --version",
    "exec": "nodemon ./server/bin/www --exec babel-node ./app",
    "start": "cross-env NODE_ENV=development & nodemon ./bin/www --exec babel-node",
    "coverage": "node node_modules/.bin/istanbul cover _mocha -- -R spec",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "start:dev": "nodemon --exec babel-node ./bin/www.js",
    "test": "cross-env NODE_ENV=test& npm run unmigrate:test& npm run migrate:test& mocha tests/test.js --compilers js:babel-core/register",
    "migrate:test": "cross-env NODE_ENV=test NODE_ENV=test sequelize db:migrate",
    "unmigrate:test": "cross-env NODE_ENV=test sequelize db:migrate:undo:all",
    "test-coverage": "cross-env NODE_ENV=test istanbul cover _mocha â€”- -R spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipheghe/More-Recipes.git"
  },
